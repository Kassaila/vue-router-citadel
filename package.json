{
  "name": "vue-router-citadel",
  "version": "0.1.0",
  "description": "Structured navigation defense for Vue Router",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:dev": "NODE_ENV=development tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:types": "tsc --noEmit",
    "check:format": "npm run format:check",
    "check:all": "npm run check:format && npm run check:types && npm run test:run",
    "release:check": "npm run check:all && npm run build && npm pack --dry-run",
    "release:publish": "npm run release:check && npm publish",
    "release:publish:beta": "npm run release:check && npm publish --tag beta",
    "prepare": "husky",
    "prepublishOnly": "npm run check:types && npm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  },
  "keywords": [
    "vue",
    "vue-router",
    "router",
    "guard",
    "middleware",
    "navigation",
    "typescript"
  ],
  "author": "Kassaila",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kassaila/vue-router-citadel.git"
  },
  "bugs": {
    "url": "https://github.com/Kassaila/vue-router-citadel/issues"
  },
  "homepage": "https://github.com/Kassaila/vue-router-citadel#readme",
  "peerDependencies": {
    "vue": "^3.0.0",
    "vue-router": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@vue/devtools-api": "^8.0.5"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.4.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vitest": "^4.0.18",
    "vue": "^3.5.27",
    "vue-router": "^5.0.2"
  }
}
